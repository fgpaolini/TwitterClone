<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TwitterClone" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/twitterBlue</item>
        <item name="colorPrimaryVariant">@color/twitterBlueSecondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:fontFamily">@font/chirp_regular</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/twitterBlue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="roundedCornersImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <style name="likeButtonStyle" parent="">
        <item name="android:background">@drawable/like_checkbox</item>

    </style>

    <style name="rtButtonStyle" parent="">
        <item name="android:background">@drawable/retweet_checkbox</item>

    </style>

    <style name="whiteButton" parent="">
        <item name="android:background">@drawable/custom_white_button</item>
    </style>

    <style name="rondedButton" parent="">
        <item name="selectableItemBackground">@drawable/btn_round_blue</item>
    </style>

    <style name="blueButtonStyle" parent="">
        <item name="android:background">@drawable/custom_blue_button</item>

    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

</resources>