<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/twitterBlue"
    tools:context=".IntroLogin.LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="80dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/twitter_clone_icon"
        tools:srcCompat="@drawable/twitter_clone_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/chirp_bold"
            android:gravity="center"
            android:text="@string/tvRegister"
            android:textColor="@color/colorWhite"
            android:textSize="25sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etNombreReg"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/custom_edittext"
            android:elevation="5dp"
            android:fontFamily="@font/chirp_regular"
            android:hint="@string/etName"
            android:paddingStart="20dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etUserReg"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/custom_edittext"
            android:elevation="5dp"
            android:fontFamily="@font/chirp_regular"
            android:hint="@string/etUsuario"
            android:paddingStart="20dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etEmailReg"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/custom_edittext"
            android:elevation="5dp"
            android:fontFamily="@font/chirp_regular"
            android:hint="@string/etRegEmail"
            android:paddingStart="20dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPassReg"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/custom_edittext"
            android:elevation="5dp"
            android:fontFamily="@font/chirp_regular"
            android:hint="@string/etRegPassword"
            android:inputType="textPassword"
            android:paddingStart="20dp" />

        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:fontFamily="@font/chirp_heavy"
            android:text="@string/buttonJoin"
            android:textAllCaps="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/chirp_medium"
                android:text="@string/tvHaveAcc"
                android:textAlignment="textEnd"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/btTextRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/chirp_heavy"
                android:text="@string/tvLog"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>